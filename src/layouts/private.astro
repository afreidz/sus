---
import BaseLayout from "./base.astro";
import Logo from "@/components/common/Logo.svelte";
import AvatarMenu from "@/components/private/AvatarMenu.svelte";

const { class: className } = Astro.props;
---

<BaseLayout>
  <div class="navbar bg-neutral shadow-sm z-10">
    <div class="flex-1">
      <Logo />
    </div>
    <AvatarMenu client:only />
  </div>
  <div class={className ?? ""}>
    <slot />
  </div>
</BaseLayout>
