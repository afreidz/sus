---
import api from "@/helpers/api";
import SessionLayout from "@/layouts/session.astro";
import ParticipantComponent from "@/components/sessions/Participant.svelte";

const { revision: rid, respondent: id } = Astro.params;

const revision = await api({
  method: "GET",
  base: Astro.url.origin,
  endpoint: "revisionId",
  headers: Astro.request.headers,
  substitutions: {
    revisionId: rid ?? "",
  },
});

const respondent = await api({
  method: "GET",
  base: Astro.url.origin,
  endpoint: "respondentId",
  headers: Astro.request.headers,
  substitutions: { respondentId: id ?? "" },
});
---

<SessionLayout class="p-2">
  <ParticipantComponent
    client:only="svelte"
    name={respondent.email}
    hostName={revision.createdBy}
    title={revision.system.title}
    id={`par${respondent.id}par`}
    host={`host${revision.id}host`}
  />
</SessionLayout>
